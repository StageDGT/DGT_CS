{% extends 'base.html.twig' %}

{% block title %}Hello BackOfficeController!{% endblock %}

{% block body %}
    <main>
        <table width="100%" height="100%">
            <tr width="100%" height="100%">
                {% include 'menu_deroulant.html.twig' %}
                <td width="100%" class="text-center" onmouseover="FermerMenu()">
                    <!-- Contenu de la page -->
                    <div class="text-align center">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm bg-white">
                                    <br/>
                                    <h3>Gérer les Administrateurs</h3><hr/>
                                    <a href='{{path("creerAdmin")}}' type='button' class="btn btn-success">Ajouter un Administrateur</a><br/><hr/><br/>
                                    <table class="table table-sm">
                                        <thead>
                                          <tr>
                                            <th scope="col">Nom</th>
                                            <th scope="col">Prenom</th>
                                            <th scope="col">Société</th>
                                            <th scope="col"></th>
                                            <th scope="col"></th>
                                          </tr>
                                        </thead>
                                        <tbody>
                                          {% for unAdmin in lesAdmin %}
                                          <tr>
                                            <td style="vertical-align: middle;">{{unAdmin.nom}}</td>
                                            <td style="vertical-align: middle;">{{unAdmin.prenom}}</td>
                                            <td style="vertical-align: middle;">{{unAdmin.societe}}</td>
                                            <td style="vertical-align: middle;"><a href='{{path("modifierAdmin", {'idAdmin': unAdmin.id})}}' type='button' class="btn btn-primary btn-sm"><i class="fas fa-edit"></i></a></td>
                                            <td style="vertical-align: middle;">
                                                <form action="{{ path('supprimerAdmin', {idAdmin : unAdmin.id})}}" method="post" onSubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet Administrateur ?')">
                                                    
                                                    <input type="hidden" name="_method" value="DELETE"></input>
                                                    <input type="hidden" name="_token" value="{{csrf_token('delete'~ unAdmin.id)}}"></input>
                                                    <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></button> 
                                                </form>
                                            </td>
                                          </tr>
                                          {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                                <div class="col-sm bg-white">
                                    <br/>
                                    <h3>Gérer les Utilisateurs</h3><hr/>
                                    <a href='{{path("creerUtilisateur")}}' type='button' class="btn btn-success">Ajouter un Utilisateur</a><br/><hr/><br/>
                                    <table class="table table-sm">
                                        <thead>
                                          <tr>
                                            <th scope="col">Nom</th>
                                            <th scope="col">Prenom</th>
                                            <th scope="col">Service</th>
                                            <th scope="col"></th>
                                            <th scope="col"></th>
                                          </tr>
                                        </thead>
                                        <tbody>
                                            {% for unUtilisateur in lesUtilisateurs %}
                                            <tr>
                                                <td style="vertical-align: middle;">{{unUtilisateur.nom}}</td>
                                                <td style="vertical-align: middle;">{{unUtilisateur.prenom}}</td>
                                                <td style="vertical-align: middle;">{{unUtilisateur.idAppartenir.libelle}}</td>
                                                <td style="vertical-align: middle;"><a href='{{path("modifierUtilisateur", {'idUtilisateur': unUtilisateur.id})}}' type='button' class="btn btn-primary btn-sm"><i class="fas fa-edit"></i></a></td>
                                                <td style="vertical-align: middle;">
                                                    <form action="{{ path('supprimerUtilisateur', {idUtilisateur : unUtilisateur.id})}}" method="post" onSubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet Utilisateur ?')">
                                                        <input type="hidden" name="_method" value="DELETE"></input>
                                                        <input type="hidden" name="_token" value="{{csrf_token('delete'~ unUtilisateur.id)}}"></input>
                                                        <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></button> 
                                                    </form>
                                                </td>
                                            </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        </table>
    </main>
{% endblock %}
