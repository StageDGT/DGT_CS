{% extends 'base.html.twig' %}

{% block body %}
    <main>
        <table width="100%" height="100%">
            <tr width="100%" height="100%">
                {% include 'menu_deroulant.html.twig' %}
                <td width="100%" class="text-center" onmouseover="FermerMenu()">
                    <!-- Contenu de la page -->
                    <div class="text-align center bg-white" style="width : 70%; margin:auto;">
                        <br/>
                        <h1>Un problème ?</h1>
                        <br/>
                        <form method='post'>
                            <p>Sélectionnez le produit :</p>
                            <div class="container">
                                <div class="row">
                                    <div class="col-sm">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="radio" id="radioLCMS" value="TS LCMS" checked>
                                            <label class="form-check-label" for="radioLCMS">
                                                TS LCMS
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-sm">
                                        <div class="form-check">
                                        <input class="form-check-input" type="radio" name="radio" id="radioLMS" value="TS LMS">
                                        <label class="form-check-label" for="radioLMS">
                                            TS LMS
                                        </label>
                                        </div>
                                    </div>
                                    <div class="col-sm">
                                        <div class="form-check">
                                        <input class="form-check-input" type="radio" name="radio" id="radioTSA" value="TS A">
                                        <label class="form-check-label" for="radioTSA">
                                            TS A
                                        </label>
                                        </div>
                                    </div>
                                    <div class="col-sm">
                                        <div class="form-check">
                                        <input class="form-check-input" type="radio" name="radio" id="radioDGTLCD" value="DGT LCD">
                                        <label class="form-check-label" for="radioDGTLCD">
                                            DGT LCD
                                        </label>
                                        </div>
                                    </div>
                                    <div class="col-sm">
                                        <div class="form-check">
                                        <input class="form-check-input" type="radio" name="radio" id="radioAutre" value="Autre">
                                        <label class="form-check-label" for="radioAutre">
                                            Autre
                                        </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br/>
                            <div class="form-group" style="width:600px; margin: auto;">
                                <textarea class="form-control" name="TextAreaDescription" id="TextAreaDescription" rows="5" placeholder="Décrivez votre problème..."></textarea>
                            </div>
                            <br/>
                            <div class="form-group" style="width:600px; margin: auto;">
                                <input type="file" name='PJ' class="form-control-file" id="PJ">
                            </div>
                            <br/>
                            <button type="submit" class="btn btn-primary mb-2" name="btnEnvoyer" >Envoyer</button>
                        </form>
                    </div>
                </td>
            </tr>
        </table>
    </main>
{% endblock %}
