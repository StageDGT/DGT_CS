{% extends 'base.html.twig' %}

{% block body %}

<table width="100%" height="100%">
    <tr width="100%" height="100%">
        {% include 'menu_deroulant.html.twig' %}

        <td width="100%" class="text-center" onmouseover="FermerMenu()">
            <!-- Contenu de la page -->
            <div class="text-align center">
                <div class="container">
                    <div class="row">
                        <div class="col-sm"></div>
                        {% if theUser.role == 0 %}
                        <div class="col-sm bg-white">
                            <br/>
                            {{ form_start(form) }}
                                <div class="form-group">   
                                    <label>Nom</label>
                                    {{ form_widget(form.nom, { attr: {'class': 'form-control'} })}}
                                </div>
                                <div class="form-group">     
                                    <label>Prénom</label>
                                    {{ form_widget(form.prenom, { attr: {'class': 'form-control'} })}}
                                </div>
                                <div class="form-group">     
                                    <label>Adresse mail</label>
                                    {{ form_widget(form.mail, { attr: {'class': 'form-control'} })}}
                                </div>
                                <div class="form-group">     
                                    <label>Numéro de téléphone</label>
                                    {{ form_widget(form.telephone, { attr: {'class': 'form-control'} })}}
                                </div>


                                <div class="form-group">     
                                    <label>Numéro de téléphone portable</label>
                                    {{ form_widget(form.portable, { attr: {'class': 'form-control'} })}}
                                </div>

                               
                                <div class="form-group">     
                                    <label>Service</label>
                                    {{ form_widget(form.idAppartenir, { attr: {'class': 'form-control'} })}}
                                </div>
        

                                <div class="form-group">     
                                    <label>Identifiant</label>
                                    {{ form_widget(form.login, { attr: {'class': 'form-control'} })}}
                                </div>
                                <div class="form-group">     
                                    <label>Mot de passe</label>
                                    {{ form_widget(form.mdp, { attr: {'class': 'form-control'} })}}
                                </div>
                                
                                <button type="submit" class="btn btn-primary">Valider</button>
                            {{ form_end(form) }}
                            <br/>
                        </div>
                        {% endif %}
                        <div class="col-sm"></div>
                    </div>
                </div>
            </div>
        </td>
    </tr>
</table>
<style>
    body{
        position: relative;
    }
</style>
{% endblock %}